<div class="mdl-grid libra-file-list">
  {{#each models}}
    <div class="mdl-cell
                mdl-cell--3-col
                mdl-cell--3-col-desktop
                mdl-cell--4-col-tablet
                mdl-cell--4-col-phone">

      <div class="mdl-card mdl-shadow--4dp libra-file-list-item">

        <div class="mdl-card__title mdl-card--border">
          <h2 class="mdl-card__title-text"> {{name}} </h2>
        </div>

        <div class="mdl-card__supporting-text">
          <div class="mdl-grid">
            <div class="mdl-cell--12-col">
              <span>Size: </span><span>{{size}}</span>
            </div>
          </div>
        </div>

        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent"
             href="/files{{path}}">
            Read
          </a>
        </div>
      </div>

    </div>
  {{/each}}
</div>
